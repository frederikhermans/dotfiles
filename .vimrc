set comments=sl:/*,mb:\ *,elx:\ */q:q
set formatoptions+=r
set t_Co=256
colorscheme Monokai
set tags=./tags;/

syntax on
set tabstop=4
set shiftwidth=4

set expandtab
set autoindent

set ignorecase
set smartcase
set incsearch
set hlsearch

set number
set ruler

set modeline
set modelines=5

filetype plugin on
